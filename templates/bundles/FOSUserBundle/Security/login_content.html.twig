{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="container">
        <div class="row show-grid">
            <div class="col-md-12">
                <div class="col-sm-12">
                    <div class="alert alert-danger">
                        <h4>
                            <span class="icon-icon-warning fs3" style="float: left"></span>
                            <p style="padding-top: 0.2em" class="text-center"><strong>Credenciales inválidas.</strong>
                                Verifique su nombre de usuario y/o contraseña</p></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

    <div class="text-center"> {#px-3 py-3 pt-md-5 pb-md-4 mx-auto#}
        <h1 class="display-4 mt-5">MINSAL</h1>
    </div>
          {% if csrf_token %}
            <input class="col-sm-12" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
          {% endif %}
<div class="container">

    <div class="row">

        <div class="col-xs-3 col-md-3"></div>
        <div class="col-xs-6 col-md-6">
            <div class="card mb-4 box-shadow">
                <div class="card-header text-center">
                    <h4 class="my-0 font-weight-normal">Iniciar Sesión</h4>
                </div>
                <div class="card-body">
                    <form action="{{ path("fos_user_security_check") }}" method="post">

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="username">Usuario:</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" id="username" name="_username" placeholder="Ingresar usuario" value="{{ last_username }}" required="required" />
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="password">Contraseña:</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="password" id="password" name="_password" placeholder="Ingresar contraseña" required="required" />
                            </div>
                        </div>


                        <div class="form-group"><div class="col-sm-3"></div></div>
                        <div class="form-group row text-center">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                            <input class="btn btn-lg btn-outline-success" type="submit" id="_submit" name="_submit" value="Entrar" />
                            </div>
                            <div class="col-sm-3"></div>
                        </div>

                    </form>
                        {#<hr class="col-sm-6 justify-content-center divider margin-top-16">#}
                    </div>
                </div>
            </div>
        <div class="col-xs-3 col-md-3"></div>
    </div>
</div>
